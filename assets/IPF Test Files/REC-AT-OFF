# File name: REC-AT-OFF
# File content: Official fees for requesting a recordal of change: Austria
# Valid until: n/a

DEFINE LIST REC_TYPE AS 'Chose recordal type?'
CHOICE 'Transfer/Assignment' AS REC_TRANSFER
CHOICE 'Merger' AS REC_MERGER
CHOICE 'License' AS REC_LICENSE
CHOICE 'Change of Address' AS REC_ADR
CHOICE 'Change of Name' AS REC_NAME
DEFAULT REC_TRANSFER
ENDDEFINE

DEFINE BOOLEAN Right_PAT AS 'Patents?'
DEFAULT FALSE
ENDDEFINE
DEFINE BOOLEAN Right_TM AS 'Trademarks?'
DEFAULT FALSE
ENDDEFINE
DEFINE BOOLEAN Right_DES AS 'Designs?'
DEFAULT FALSE
ENDDEFINE

DEFINE NUMBER RightCount AS 'Number of IP Rights?'
BETWEEN 1 AND 100000
DEFAULT 1
ENDDEFINE

COMPUTE FEE OFF_REC
# one fee per type of right if change of name or entity of owner
YIELD 81 IF Right_PAT EQUALS TRUE AND (REC_TYPE EQUALS REC_ADR OR REC_TYPE EQUALS REC_NAME)
YIELD 81 IF Right_TM EQUALS TRUE AND (REC_TYPE EQUALS REC_ADR OR REC_TYPE EQUALS REC_NAME)
YIELD 81 IF Right_DES EQUALS TRUE AND (REC_TYPE EQUALS REC_ADR OR REC_TYPE EQUALS REC_NAME)

# one fee per right if change of ownership, license
YIELD 128 * RightCount IF (REC_TYPE EQUALS REC_TRANSFER OR REC_TYPE EQUALS REC_MERGER OR REC_TYPE EQUALS REC_LICENSE)
ENDCOMPUTE