# File name: REC-AT-OFF
# File content: Official fees for requesting a recordal of change: Austria
# Valid until: n/a
# Currency: EUR

DEFINE LIST REC_TYPE AS 'Chose recordal type?'
CHOICE REC_TRANSFER AS 'Transfer/Assignment'
CHOICE REC_MERGER AS 'Merger'
CHOICE REC_LICENSE AS 'License'
CHOICE REC_ADR AS 'Change of Address'
CHOICE REC_NAME AS 'Change of Name'
DEFAULT REC_TRANSFER
ENDDEFINE

DEFINE BOOLEAN Right_PAT AS 'Patents?'
DEFAULT FALSE
ENDDEFINE
DEFINE BOOLEAN Right_TM AS 'Trademarks?'
DEFAULT FALSE
ENDDEFINE
DEFINE BOOLEAN Right_DES AS 'Designs?'
DEFAULT FALSE
ENDDEFINE

DEFINE NUMBER RightCount AS 'Number of IP Rights?'
BETWEEN 1 AND 100000
DEFAULT 1
ENDDEFINE

COMPUTE FEE OFF_REC
# one fee per type of right if change of name or entity of owner
LET OFee AS 81

YIELD OFee IF Right_PAT EQ TRUE AND (REC_TYPE EQ REC_ADR OR REC_TYPE EQ REC_NAME)
YIELD OFee IF Right_TM EQ TRUE AND (REC_TYPE EQ REC_ADR OR REC_TYPE EQ REC_NAME)
YIELD OFee IF Right_DES EQ TRUE AND (REC_TYPE EQ REC_ADR OR REC_TYPE EQ REC_NAME)

# one fee per right if change of ownership, license
LET OFee AS 128
YIELD OFee * RightCount IF (REC_TYPE EQ REC_TRANSFER OR REC_TYPE EQ REC_MERGER OR REC_TYPE EQ REC_LICENSE)
ENDCOMPUTE