@using Microsoft.AspNetCore.Identity

<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {        
        <li class="nav-item">            
            <p class="nav-link text-dark">
                <i class="bi bi-person-fill"></i>
                <small>@User.FindFirst("name")?.Value (@User.FindFirst("preferred_username")?.Value)</small>
            </p>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Account" asp-page="Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Account" asp-page="Login">Login</a>
        </li>
    }
</ul>
