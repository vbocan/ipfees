@page
@model IPFees.Web.Pages.Module.IndexModel
@{
    ViewData["Title"] = "Modules";
}

<h1>Modules</h1>

<div class="row">
    <div class="col-6">
        <a class="btn btn-primary" asp-action="Create" role="button">Create</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Module</th>
                    <th scope="col">Description</th>
                    <th scope="col"></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var mi in Model.Modules)
                {
                    <tr>
                        <th scope="row">@mi.Name</th>
                        <td>@mi.Description</td>
                        <td><a asp-action="Edit" asp-route-id="@mi.Id">Edit</a> | <a asp-action="Delete" asp-route-id="@mi.Id">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>