@page
@model IPFees.Web.Pages.Jurisdiction.IndexModel
@{
    ViewData["Title"] = "Jurisdictions";
}

<h1>Jurisdictions</h1>

<div class="row">
    <div class="col-lg-12">
        <a class="btn btn-primary" asp-page="./Create" role="button">Create</a>
        @if (Model.Jurisdictions.Any())
        {
            <table class="table table-hover">
                <thead>
                    <tr>                        
                        <th scope="col">Jurisdiction (click to run)</th>                        
                        <th scope="col">References</th>
                        <th scope="col">Last Updated</th>
                        <th scope="col"></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var mi in Model.Jurisdictions)
                    {
                        <tr>
                            <th scope="row"><a asp-page="DataCollect" asp-route-id="@mi.Name">[@mi.Name] (@mi.Description)</a></th>
                            <td>@mi.ReferencedModules.Count()</td>
                            <td>@mi.LastUpdatedOn</td>
                            <td><a asp-page="Edit" asp-route-id="@mi.Name">Edit</a> | <a asp-page="Delete" asp-route-id="@mi.Name">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <h6>@Model.Jurisdictions.Count() jurisdictions defined.</h6>
        }
        else
        {
            <h6>Jurisdictions defined in the system appear here.</h6>
        }
    </div>
</div>