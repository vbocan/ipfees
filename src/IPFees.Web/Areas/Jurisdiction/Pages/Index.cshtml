@page
@model IndexModel
@{
    ViewData["Title"] = "Jurisdiction List";
}

<h1>Jurisdiction <small class="text-muted">List</small></h1>

<div class="row">
    <div class="col-lg-12">
        <a class="btn btn-primary" asp-page="./Create" role="button">Create</a>
        @if (Model.Jurisdictions.Any())
        {
            <table class="table table-hover">
                <thead>
                    <tr>                        
                        <th scope="col">Jurisdiction</th>
                        <th scope="col">Category</th>
                        <th scope="col">Description</th>
                        <th scope="col">References</th>
                        <th scope="col">Last Updated</th>
                        <th scope="col"></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var mi in Model.Jurisdictions)
                    {
                        <tr>
                            <td>@mi.Name</td>
                            <td>@mi.Category.ValueAsString()</td>                            
                            <td>@mi.Description</td>
                            <td>@mi.ReferencedModules.Count()</td>
                            <td>@mi.LastUpdatedOn</td>                            
                            <td>
                                <a asp-area="Run" asp-page="Jurisdiction" asp-route-id="@mi.Id">Run</a> |
                                <a asp-page="Edit" asp-route-id="@mi.Id">Edit</a> |
                                <a asp-page="Delete" asp-route-id="@mi.Id">Delete</a>
                            </td>                            
                        </tr>
                    }
                </tbody>
            </table>
            <h6>@Model.Jurisdictions.Count() jurisdictions defined.</h6>
        }
        else
        {
            <h6>Defined jurisdictions appear here.</h6>
        }
    </div>
</div>