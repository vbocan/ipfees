@page
@model IndexModel
@{
    ViewData["Title"] = "Settings";
}

<h1>Settings <small class="text-muted">Page</small></h1>

<div class="row">
    <div class="col-lg-6">
        <h2>Module Groups</h2>
        @if (Model.ModuleGroups.Any())
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Group</th>                        
                        <th scope="col">Description</th>
                        <th scope="col"></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var mi in Model.ModuleGroups)
                    {
                        <tr>
                            <td>@mi.GroupIndex</td>
                            <td>@mi.GroupName</td>
                            <td>@mi.GroupDescription</td>                            
                            <td><a asp-page="EditCategory" asp-route-id="@mi.GroupName">Edit</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <h6>@Model.ModuleGroups.Count() module categories.</h6>
        }
        else
        {
            <h6>Categories assigned to modules appear here.</h6>
        }
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <h2>Attorney Fees</h2>
        @if (Model.AttorneyFees.Any())
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Attorney Fee Level</th>
                        <th scope="col">Amount</th>
                        <th scope="col">Currency</th>
                        <th scope="col"></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var mi in Model.AttorneyFees)
                    {
                        <tr>
                            <td>@mi.FeeLevel.ValueAsString()</td>
                            <td>@mi.Amount</td>
                            <td>@mi.Currency</td>
                            <td><a asp-page="EditAttorneyFee" asp-route-id="@mi.FeeLevel">Edit</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <h6>@Model.AttorneyFees.Count() attorney fee levels.</h6>
        }
        else
        {
            <h6>Attorney fees appear here.</h6>
        }
    </div>
</div>