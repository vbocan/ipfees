@page "{id}"
@model EditAttorneyFeeModel
@{
    ViewData["Title"] = "Attorney Fee";
}

<h1>Attorney Fees <small class="text-muted">@Model.AttorneyFeeLevel</small></h1>

<div class="row">
    <div class="col-lg-4">
        @if (Model.ErrorMessages.Any())
        {
            <div class="alert alert-danger d-flex align-items-center" role="alert">
                <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill" /></svg>
                <div>
                    @foreach(var em in Model.ErrorMessages)
                    {
                        <text>@em</text><br/>
                    }                    
                </div>
            </div>
        }
        <form method="post">            
            <div class="mb-3">
                <label for="@Model.AttorneyFeeLevel" class="form-label">Attorney Fee Level</label>
                <input asp-for="AttorneyFeeLevel" class="form-control" disabled />
            </div>
            <div class="mb-3">
                <label for="@Model.Amount" class="form-label">Amount</label>
                <input asp-for="Amount" value="@Model.Amount" class="form-control" required />
            </div>
            <div class="mb-3">
                <label for="@Model.Currency" class="form-label">Currency</label>
                <input asp-for="Currency" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

<partial name="_Symbols" />