@page
@model IndexModel
@{
    ViewData["Title"] = "Fee Calculation";
}

<h1>Select <small class="text-muted">Jurisdictions</small></h1>

<div class="row">
    <div class="col-lg-12">
        <div class="form-check form-switch mb-2">
            <label for="selectAll">
                <input type="checkbox" id="selectAll" class="form-check-input" checked /> Select all @Model.Jurisdictions.Count() items / Unselect all
            </label>
        </div>
        @if (Model.Jurisdictions.Any())
        {
            <form method="post">
                <div class="row mb-4">
                    @for (var i = 0; i < Model.SelectedJurisdictions.Count(); i++)
                    {
                        <div class="col-md-1 shadow py-2 mb-1 mx-1 bg-white rounded">
                            <div class="form-check form-switch">
                                <label class="form-check-label" for="@Model.SelectedJurisdictions[i].Name" title="@Model.SelectedJurisdictions[i].Description">@Model.SelectedJurisdictions[i].Name</label>
                                <input class="form-check-input" type="checkbox" asp-for="@Model.SelectedJurisdictions[i].Checked" title="@Model.SelectedJurisdictions[i].Description">
                                <input type="hidden" asp-for="@Model.SelectedJurisdictions[i].Checked" value="false">
                                <input type="hidden" asp-for="@Model.SelectedJurisdictions[i].Name">
                                <input type="hidden" asp-for="@Model.SelectedJurisdictions[i].Id">
                            </div>
                        </div>
                    }
                </div>
                <div class="row mt-2">
                    <div class="col-12">
                        <div class="mb-3 col-md-4">
                            <select class="form-select form-select-lg mb-3" asp-for="@Model.TargetCurrency" asp-items="Model.CurrencyItems" required>
                                <option value="">Select target currency...</option>
                            </select>
                        </div>
                    </div>
                </div>
                @if (Model.CurrencyExchangeRatesAvailable)
                {
                    <div class="row mt-2">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">Calculate Fees</button>
                        </div>
                    </div>
                } else
                {
                    <div class="row mt-2">
                        <div class="col-12">
                            <div class="alert alert-danger" role="alert">
                                Currency exchange rates are not currently available therefore we are unable to compute the fees. Please check back later.
                            </div>
                        </div>
                    </div>
                }
            </form>
        }
        else
        {
            <h6>There are no jurisdictions defined in the system. Please contact the administrator.</h6>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#selectAll').click(function () {
                $('.form-check-input').prop('checked', this.checked);
            });
        });
    </script>
                }