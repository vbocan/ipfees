@page
@model IndexModel
@{
    ViewData["Title"] = "Calculate Your Intellectual Property Fees";
}

<h1 class="display-4">Calculate Your Intellectual Property Fees</h1>

<div class="row mt-5">
    <!-- Column #1 -->
    <div class="col-lg-7 col-md-7 col-sm-12">
        @if (Model.Jurisdictions.Any())
        {
            <form method="post">
                <div class="row mb-4">
                    <h2>Select <small class="text-muted">Jurisdictions</small></h2>
                    <!-- Jurisdictions -->
                    <div class="mb-3 col-12">
                        <label for="@Model.SelectedJurisdictions" class="form-label">Select one or more jurisdictions to calculate fees for.</label>
                        <select size="10" multiple class="form-select form-select-lg mb-3" asp-for="@Model.SelectedJurisdictions" asp-items="Model.SelectedJurisdictionItems" required>
                        </select>
                        <div class="text-muted">@Model.Jurisdictions.Count() items.</div>
                    </div>
                </div>
                <h2>Select <small class="text-muted">currency</small></h2>
                <!-- Currency -->
                <div class="row mt-2">
                    <div class="col-12">
                        <div class="col-6">
                            <select class="form-select form-select-lg mb-3" asp-for="@Model.TargetCurrency" asp-items="Model.CurrencyItems" required>
                            </select>                            
                        </div>
                        <div class="mb-3 col-12">
                            <div class="text-muted">The calculated fees will be displayed in the currency selected here.</div>
                        </div>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-12">
                        @if (Model.CurrencyDataStatus == ResponseStatus.ResponseOnline)
                        {
                            <button type="submit" class="btn btn-primary">Next Step - Select Parameters</button>
                        }
                        else if (Model.CurrencyDataStatus == ResponseStatus.ResponseStale)
                        {
                            <div class="alert alert-warning" role="alert">
                                <strong>Using backup currency data</strong><br/>
                                Current exchange rates are not available from the online service, but we're using backup rates from our database. Results may not reflect the most current exchange rates.<br/>
                                You may need to get an API key from <a href="https://www.exchangerate-api.com" target="_blank">https://www.exchangerate-api.com/</a> and place it in file appsettings.json.
                            </div>
                            <button type="submit" class="btn btn-primary">Next Step - Select Parameters</button>
                        }
                        else
                        {
                            <div class="alert alert-danger" role="alert">
                                <strong>Currency exchange rates are not available</strong><br />
                                Neither online nor backup currency data is available. To continue, you need to get an API key from <a href="https://www.exchangerate-api.com" target="_blank">https://www.exchangerate-api.com/</a> and place it in file appsettings.json.
                            </div>
                        }
                    </div>
                </div>
            </form>
        }
        else
        {
            <h6>There are no jurisdictions defined in the system. Please contact the administrator.</h6>
        }
    </div>
    <!-- Column #2 -->
    <div class="col-lg-5 col-md-5 d-none d-sm-block">
        <img src="~/images/businesswoman.jpg" class="img-fluid" />
    </div>
</div>
