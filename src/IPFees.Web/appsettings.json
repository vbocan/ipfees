{
  "ConnectionStrings": {
    "MongoDbConnection": "mongodb://root:pA$$w0rd@ipfees-mongodb:27017/IPFees?authSource=admin&retryWrites=true"
  },
  "DatabaseReset": {
    "DataFolder": "wwwroot/data"
  },
  "ServiceKeys": {
    "ExchangeRateApiKey": "{EXCHANGERATE_API_KEY}" // Get an API key from at https://www.exchangerate-api.com/
  },
  "CurrencySettings": {
    "AllowedCurrencies": [ "EUR", "USD", "RON", "GBP", "JPY" ], // User is allowed to select the following target currencies
    "CurrencyMarkup": 1.1 // Percent to add to each currency conversion
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/ipfees-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true
        }
      }      
    ]
  },
  "AllowedHosts": "*"
}
