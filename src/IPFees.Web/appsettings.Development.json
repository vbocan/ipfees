{
  "ConnectionStrings": {
    "MongoDbConnection": "mongodb://admin:admin@mongodb:27017/IPFees?authSource=admin"
  },
  "DatabaseReset": {
    "DataFolder": "wwwroot/data"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/ipfees-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Application": "IPFees",
        "Args": {
          "serverUrl": "http://seq:5341",
          "MinimumLevel": "Trace"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
