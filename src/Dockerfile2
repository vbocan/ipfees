#See https://aka.ms/customizecontainer to learn how to customize your debug container and how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
USER app
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["IPFees.API/IPFees.API.csproj", "IPFees.API/"]
COPY ["IPFees.Calculator/IPFees.Calculator.csproj", "IPFees.Calculator/"]
COPY ["IPFees.Core/IPFees.Core.csproj", "IPFees.Core/"]
RUN dotnet restore "IPFees.API/./IPFees.API.csproj"
COPY . .
WORKDIR "/src/IPFees.API"
RUN dotnet build "IPFees.API.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "IPFees.API.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "IPFees.API.dll"]